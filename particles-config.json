/* General Reset */
* {
    margin: 0;
    padding: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    box-sizing: border-box;
}

body, html {
    height: 100%;
    overflow: hidden;
    background: linear-gradient(135deg, #124066, #ffffff);
    color: #fff;
}

/* Particle Background */
#particles-js {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

/* Main Container Styling */
.container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    text-align: center;
}

.calculator {
    background: rgba(255, 255, 255, 0.1);
    padding: 40px 50px;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}

.calculator h1 {
    font-size: 60px;
    font-weight: 700;
    color: #ffdd57;
    margin-bottom: 15px;
}

.calculator h1 span {
    color: #ff6b6b;
    font-size: 36px;
}

.input-box {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
    margin: 30px 0;
    padding: 25px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 10px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
}

.input-box input {
    padding: 14px 20px;
    border-radius: 10px;
    border: 2px solid #ffdd57;
    outline: none;
    font-size: 18px;
    color: #333;
    font-weight: 500;
    background: #fff;
    width: 50%;
}

.input-box input:focus {
    border-color: #ff6b6b;
}

.input-box button {
    padding: 15px 30px;
    background: linear-gradient(45deg, #ff6b6b, #ffdd57);
    color: #333;
    border-radius: 10px;
    font-size: 18px;
    font-weight: bold;
    cursor: pointer;
    border: none;
}

.input-box button:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 15px rgba(255, 107, 107, 0.3);
}

#result {
    font-size: 24px;
    font-weight: 600;
    color: #ffdd57;
    margin-top: 20px;
}

#result span {
    color: #ff6b6b;
}
